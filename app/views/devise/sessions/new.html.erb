<br>
  <div class="mui-row">
    <div class="mui-col-md-6">
<legend id="forms"><h2>Log in</h2></legend>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
  <div class="mui-textfield mui-textfield--float-label">
    <%= f.email_field :email, autofocus: true %>
    <label>Email</label>
  </div>
  
  <div class="mui-textfield mui-textfield--float-label">
    <%= f.password_field :password, autocomplete: "off" %>
    <label>Password</label>
  </div>
<% if devise_mapping.rememberable? -%>
    
            <img id="myImage" onclick="changeImage()" src="http://i.imgur.com/0JtgN89.png" width="40" height="40"> <%= f.label :remember_me %>
          </div>
    </div>
  <% end -%>
  <br>

  <div class="actions">
    <%= f.submit "Log in", class: 'mui-btn mui-btn--raised' %>
  </div>
<% end %>
<br>
</div>
 <div class="mui-row">
    <div class="mui-col-md-4 mui-col-md-offset-3">
      <div class="mui-panel">
<%= render "devise/shared/links" %>
</div>
    </div>
</div>
</div>

<script>
    function changeImage() {
        var image = document.getElementById('myImage');
        if (image.src.match("http://i.imgur.com/0JtgN89.png")) {
            image.src = "http://i.imgur.com/vdZvrPm.png";
        } else {
            image.src = "http://i.imgur.com/0JtgN89.png";
        }
    }
</script>
